<div class="page-headers d-flex justify-content-between">
  <h1>Explore Builds</h1>
  <%= simple_form_for :query, url: builds_path, method: :get do |f| %>
    <div class="d-flex align-items-center position-relative">
      <%= f.input :search_word, placeholder: "Search for a build...", label: false, required: false, input_html: { value: @params_query, class: "search-field"} ,wrapper_html: { class: "no-margin" } %>
      <div class="icon-positioning">
        <span class="material-symbols-outlined">search</span>
      </div>
    </div>
  <% end %>
</div>
<div class="cards-new card-wrapper-new">
  <% @builds.each do |build| %>
    <%= render "shared/build_card", build: build, appliances: build.appliances %>
  <% end %>
</div>
