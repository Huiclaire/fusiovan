    <ul class="m-3 navbar-user-action">
      <li>
      <span class="material-symbols-outlined d-block text-decoration-none text-black text-align-center bottom-align-text">logout</span>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "d-block text-decoration-none text-align-center bottom-align-text" %>
      </li>
    </ul>
    <% else %>
      <div class="m-3 navbar-user-action">
        <%= link_to "Login", new_user_session_path, class: "d-block text-decoration-none text-black text-align-center bottom-align-text"%>
