
    <div class="sidebar-header">
      <%= link_to root_path, class: "navbar-brand" do %>
        <div class="sidebar-logo">
        <%= image_tag "logo.png", alt: "FusioVan Logo", height: 120 %>
        </div>

      <% end %>
      <h2 class= "text-justify">FUSIOVAN</h2>
    </div>


    <ul class="sidebar-links">
    <li>
      <span class="material-symbols-outlined">home</span>
      <%= link_to "My Dashboard", dashboard_path, class: "d-block text-decoration-none text-start" %>
    </li>
    <li>
      <span class="material-symbols-outlined">explore</span>
      <%= link_to "Explore Builds", builds_path, class: "d-block text-decoration-none text-start" %>
    </li>
    <li>
      <span class="material-symbols-outlined">mode_fan</span>
