<div class="builds-card-container-new card-shadow box-relative">
  <div class="d-flex justify-content-between">
    <div>
      <div class="build-title-new align-items-start flex-column">
        <p class="mb-2"><%= battery.model %></p>
        <p class="appliances-text mb-1"><%= battery.make %></p>
      </div>
    </div>
    <div>
      <%= image_tag "new_battery_#{battery.model.gsub(/\s+/, "").downcase}.png", class: "battery-img"%>
    </div>
  </div>
  <div class="d-flex mt-5">
    <span class="material-symbols-outlined" style="color: gray;">open_in_new</span>
    <a class="appliances-text mt-1" href="#" target="blank" class="appliances-text" style="text-decoration: none">Go to product page</a>
  </div>
  <div class="appliances-text d-flex border-top card-bottom-boxes-position w-100">
    <div class="d-flex flex-column w-100 right-border ps-3">
      <p class="mb-2 pt-2">Volts</p>
      <p class="text-black"> <strong><%= battery.voltage %> V</p></strong>
    </div>
    <div class="d-flex flex-column w-100 ps-3 right-border">
      <p class="mb-2 pt-2">Amp hours</p>
      <p class="text-black"> <strong><%= battery.amp_hours %> Ah</p></strong>
    </div>
    <div class="d-flex flex-column w-100 ps-3">
      <p class="mb-2 pt-2">Price</p>
      <p class="text-black"><strong>$ <%= battery.price %></p></strong>
    </div>
  </div>
</div>
