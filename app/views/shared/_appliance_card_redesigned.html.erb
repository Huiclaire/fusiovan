
<div class="builds-card-container-new card-shadow box-relative">
  <div class="d-flex justify-content-between">
    <div>
      <div class="build-title-new align-items-start flex-column">
        <p class="mb-2 build-title-new"><%= appliance.model %></p>
        <p class="appliances-text mb-1"><%= appliance.make %></p>
      </div>
    </div>
    <%= image_tag "new_#{appliance.kind}_#{appliance.model.gsub(/\s+/, "").downcase}.png", class: "appliance-img"%>
  </div>
  <div class="d-flex mt-5">
    <span class="material-symbols-outlined me-1" style="color: gray;">open_in_new</span>
    <a href="www.duduckgo.com" class="appliances-text mt-1" style="text-decoration: none">Go to product page</a>
  </div>
  <div class="appliances-text d-flex border-top card-bottom-boxes-position w-100">
    <div class="d-flex flex-column w-100 right-border ps-3">
      <p class="mb-2 pt-2">Volts</p>
      <p class="text-black"><strong><%= appliance.voltage %> V</p> </strong>
    </div>
    <div class="d-flex flex-column w-100 ps-3 right-border">
      <p class="mb-2 pt-2">Amps</p>
      <p class="text-black"><strong><%= appliance.amps %> Ah</p> </strong>
    </div>
    <div class="d-flex flex-column w-100 ps-3">
      <p class="mb-2 pt-2">Price</p>
      <p class="text-black"><strong>$ <%= appliance.price %></p> </strong>
    </div>
  </div>
</div>
