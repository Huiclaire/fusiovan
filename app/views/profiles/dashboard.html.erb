<div class="page-headers">
  <h1>My Dashboard</h1>
</div>
<div class="card-wrapper-new">
<h2>My builds</h2>
  <div class="cards-new">
      <% current_user.builds.each do |build| %>
        <%= link_to build_path(build), class: "text-decoration-none text-black", target: :_blank do %>
          <div class="builds-card-container-new card-shadow">
            <div class="d-flex justify-content-between">
              <div>
                <div class="build-title-new">
                  <p><strong><%= build.name %></strong></p>
                </div>
                <div class="build-price-new">
                  <p><strong>$<%= build.total_price %></strong></p>
                </div>
              </div>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar-large", alt: "avatar-large" %>
            </div>

            <div class="build-text-new">
              <p><strong>Capacity: </strong> <%= build.total_amp_hours %>Ah   /  <strong>Appliances: </strong><%= build.build_appliances.length %></p>
            </div>

            <div class="trio-line">
              <div class="d-flex justify-content-center container-trio-new">
                <%= image_tag("trio_2.png", :alt => "icons", style: 'width: 75%') %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
  <br>

  <h2>My bookmarks</h2>
  <hr>
  <div class="cards-new">
      <% current_user.bookmarks.each do |bookmark| %>
        <%= link_to build_path(bookmark.build), class: "text-decoration-none text-black", target: :_blank do %>
          <div class="builds-card-container-new card-shadow">
            <div class="d-flex justify-content-between">
              <div>
                <div class="build-title-new">
                  <p><strong><%= bookmark.build.name %></strong></p>
                </div>
                <div class="build-price-new">
                  <p><strong>$<%= bookmark.build.total_price %></strong></p>
                </div>
              </div>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar-large", alt: "avatar-large" %>
            </div>

            <div class="build-text-new">
              <p><strong>Capacity: </strong> <%= bookmark.build.total_amp_hours %>Ah   /  <strong>Appliances: </strong><%= bookmark.build.build_appliances.length %></p>
            </div>

            <div class="trio-line">
              <div class="d-flex justify-content-center container-trio-new">
                <%= image_tag("trio_2.png", :alt => "icons", style: 'width: 75%') %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
